{# default Sliding pagination control implementation #}

{% if pageCount > 1 %}
<div class="pagination">
	{% if current != first %}
        <span class="first">
            <a href="{{ path(route, query|merge({'page': first})) }}">&lt;&lt;</a>
        </span>
    {% else %}
        <span class="current"><a href="#">&lt;&lt;</a></span>
    {% endif %}

    {% if previous is defined %}
        <span class="previous">
        	<a href="{{ path(route, query|merge({'page': previous})) }}">&lt;</a>
        </span>
    {% else %}
        <span class="current"><a href="#">&lt;</a></span>
    {% endif %}

    {% for page in pagesInRange %}
        {% if page != current %}
            <span class="page">
            	<a href="{{ path(route, query|merge({'page': page})) }}">{{ page }}</a>
            </span>
        {% else %}
            <span class="current"><a href="#">{{ page }}</a></span>
        {% endif %}

    {% endfor %}

    {% if next is defined %}
        <span class="next">
        	<a href="{{ path(route, query|merge({'page': next})) }}">&gt;</a>
        </span>
    {% else %}
        <span class="current"><a href="#">&lt;</a></span>
    {% endif %}

    {% if current != last %}
        <span class="last">
            <a href="{{ path(route, query|merge({'page': last})) }}">&gt;&gt;</a>
        </span>
    {% else %}
        <span class="current"><a href="#">&gt;&gt;</a></span>
    {% endif %}
</div>
{% endif %}
